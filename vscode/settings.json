{
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Monokai",

    "editor.fontSize": 11.5,

    "editor.fontFamily": "Monaco",
    "editor.renderWhitespace": "none",

    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true
    },

    "editor.cursorStyle": "block",

    "editor.insertSpaces": true,

    "editor.wordWrap": "off",

    "files.associations": { "*.tx": "html" },
    "vim.useSystemClipboard":true,
    "vim.cmdLineInitialColon": true,

    "vim.hlsearch": true,
    "vim.searchHighlightColor": "rgba(204,190,2,1)",

    "vim.whichwrap": "h,l,<,>,[,]",

    "vim.easymotion": true,

    "vim.visualstar": true,

    "vim.useCtrlKeys": true,
    "vim.normalModeKeyBindings": [
         {
             "before": [";"],
             "after": [":"]
         }
    ],
    "vim.insertModeKeyBindings": [
         {
             "before": ["ctrl+d"],
             "after": ["Ride->debug_log();"]
         },
         {
             "before": ["j", "j"],
             "after": ["<esc>"]
         }
    ],
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "editor.tabSize": 2,
   
    "comments": "eslintの自動保存",
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
      {
        "language": "JavaScript",
        "autoFix": true
      }
    ],
    "comments": "vueファイル内のJavaScriptに対しVeturを無効にする",
    "vetur.format.defaultFormatter.js": "none",
    "comments": "Vscodeの自動保存なし",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "eslint.alwaysShowStatus": true,
    "terminal.external.osxExec": "iTerm.app",
    "breadcrumbs.enabled": true,
    "workbench.sideBar.location": "right",
    "window.zoomLevel": 1,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickCopyPaste": true,
    "comments": "brew install reattach-to-user-namespace",
    "terminal.integrated.macOptionClickForcesSelection": true,
    "tabnine.experimentalAutoImports": true
}
